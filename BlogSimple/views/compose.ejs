<%- include('./partials/header.ejs') %>

<div class="container">
    <h2 class="text-align-right">Compose an Article</h2>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="inputArticleTitle" class="form-label">Title</label>
            <input type="text" class="form-control" name="inputArticleTitle" id="" placeholder="Article Title">
        </div>

        <div class="form-group">
            <label for="inputArticle" class="form-label">Article</label>
            <textarea class="form-control form-control-lg" name="inputArticleBody" id="articleTextArea" placeholder="Article" rows="10"></textarea>
        </div>

        <div class="p-1 text-align-right">
            <button type="submit" class="btn btn-outline-secondary" id="publishButton">Publish</button>
        </div>
    </form>
</div>


